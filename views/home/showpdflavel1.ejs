<% layout('/layouts/boilerplate') -%>

    <body>
        <div class="b-buttnOuter">
            <div class="b-buttn" data-class="10" onclick="navigate(this)">
                Class 10th
                <span class="popup">Click me</span>
            </div>
            <div class="b-buttn" data-class="11" onclick="navigate(this)">
                Class 11th
                <span class="popup">Click me</span>
            </div>
            <div class="b-buttn" data-class="12" onclick="navigate(this)">
                Class 12th
                <span class="popup">Click me</span>
            </div>
            <div class="b-buttn" data-class="bca" onclick="navigate(this)">
                BCA
                <span class="popup">Click me</span>
            </div>
        </div>

        <!-- Button-like link centered on the page -->
        <div class="center-button">

         <% if (currUser && currUser.isAdmin) { %>
            <div style="text-align: center; margin-bottom: 20px;">
                <a href="/listings/upload" class="btn btn-success">Add New PDF</a>
            </div>
        <% } %>

            <br>
            <a href="/os" class="button">Document Tutorials</a>
        </div>

        <script>
            function navigate(element) {
                const selectedClass = element.getAttribute('data-class');
                window.location.href = `/listings/class?class=${selectedClass}`;
            }
        </script>

        <style>
            /* Styles for the main button */
            .button {
                display: inline-block;
                padding: 10px 20px;
                font-size: 18px;
                font-weight: bold;
                color: white;
                background-color: #2d9d4e;
                text-decoration: none;
                border-radius: 5px;
                text-align: center;
                border: none;
                cursor: pointer;
                transition: background-color 0.3s ease;
            }

            .button:hover {
                color: red;
                background-color: #1cdfb4;
            }


            .center-button {
                display: flex;
                flex-direction: column;
                /* stack vertically */
                align-items: center;
                /* center horizontally */
                gap: 15px;
                /* space between buttons */
                margin-top: 20px;
            }

            .b-buttn {
                position: relative;
                cursor: pointer;
            }

            .popup {
                visibility: hidden;
                width: 100px;
                background-color: #ded51f;
                color: #170ce9;
                text-align: center;
                padding: 5px;
                border-radius: 5px;
                position: absolute;
                bottom: 50%;
                /* Position above the button */
                left: 50%;
                transform: translateX(-50%);
                opacity: 0;
                transition: opacity 0.3s;
                z-index: 1;
            }

            .b-buttn:hover .popup {
                visibility: visible;
                opacity: 1;
            }
        </style>
    </body>