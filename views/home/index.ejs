<% layout('/layouts/boilerplate') -%>

<body>
  <h2 style="text-align: center; margin-top: 50px">Add doucuments</h2>
  <div class="row mt-4">
    <div class="col-8 offset-2">
      <form
        action="/upload"
        method="POST"
        id="uploadForm"
        enctype="multipart/form-data"
        class="needs-validation"
        novalidate
      >
        <div class="mb-5">
          <label for="title" class="form-table">Title:</label>
          <br />
          <input
            type="text"
            name="title"
            placeholder="Add pdf  title"
            class="form-control"
           
          />
          <div class="valid-feedback">Title looks good!</div>
        </div>
        <div class="mb-5">
          <div>
            <label for="title" class="form-table">Choose a pdf file:</label>
            <input
              type="file"
              id="pdfUpload"
              name="pdf1"
              class="form-control"
              required
            />
            <div class="invalid-feedback">Choose a pdf!</div>
          </div>
        </div>
        <div class="mb-5">
          <label for="image" class="form-table">Upload an image:</label> <br />
          <input type="file" name="image" class="form-control" required />
          <div class="invalid-feedback">Choose an image!</div>
        </div>
        <div class="row">
          <div class="mb-5 col-md-5">
            <label for="class" class="form-table"> Enter class:</label> <br />
            <input type="text" name="class" class="form-control" required />
            <div class="invalid-feedback">Enter class</div>
          </div>
          <div class="mb-5 col-md-7">
            <label for="subject" class="form-table"> Enter sub name:</label
            ><br />
            <input type="text" name="subject" class="form-control" required />
            <div class="invalid-feedback">Enter sub name!</div>
          </div>
        </div>
        <button class="btn btn-dark mb-5">Submit</button>
      </form>
    </div>
  </div>
</body>
